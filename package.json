{
  "name": "create-hildy-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "scripts": {
    "dev": "pnpm --filter @repo/website dev",
    "build": "pnpm db:generate && pnpm --filter @repo/website build",
    "build:worker": "npx @opennextjs/cloudflare",
    "start": "pnpm --filter @repo/website start",
    "lint": "pnpm --filter @repo/website lint",
    "format": "prettier . --write --ignore-unknown",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "db:generate": "pnpm --filter @repo/db db:generate",
    "db:migrate": "pnpm --filter @repo/db db:migrate",
    "db:push": "pnpm --filter @repo/db db:push",
    "db:studio": "pnpm --filter @repo/db db:studio",
    "cf:dev": "wrangler dev",
    "cf:deploy": "pnpm build:worker && wrangler deploy",
    "cf:tail": "wrangler tail",
    "d1:create": "wrangler d1 create create-hildy-app-db",
    "d1:migrations": "wrangler d1 migrations apply create-hildy-app-db",
    "r2:create": "wrangler r2 bucket create create-hildy-app-bucket",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/.next pnpm-lock.yaml && pnpm install",
    "setup-script": "./scripts/setup.sh"
  },
  "devDependencies": {
    "@opennextjs/cloudflare": "^1.14.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "3.6.2",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "wrangler": "^4.54.0"
  }
}
